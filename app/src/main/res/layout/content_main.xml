<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wnw.lovebabyadmin.activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
         <TextView
             android:id="@+id/tv_send_order"
             android:layout_width="match_parent"
             android:layout_height="150dp"
             android:background="#55a9ac"
             android:layout_marginBottom="16dp"
             android:textColor="#ffff"
             android:textSize="25sp"
             android:gravity="center"
             android:text="订单管理" />
         <TextView
             android:id="@+id/tv_review_store"
             android:layout_width="match_parent"
             android:layout_height="150dp"
             android:background="#e3bd9c"
             android:layout_marginBottom="16dp"
             android:textColor="#ffff"
             android:textSize="25sp"
             android:gravity="center"
             android:text="商家审核"/>
         <TextView
             android:id="@+id/tv_manager_product"
             android:layout_width="match_parent"
             android:layout_height="150dp"
             android:background="#dd7c2c"
             android:layout_marginBottom="16dp"
             android:textColor="#ffff"
             android:textSize="25sp"
             android:gravity="center"
             android:text="商品管理"/>
         <TextView
             android:id="@+id/tv_manager_article"
             android:layout_width="match_parent"
             android:layout_height="150dp"
             android:background="#932923"
             android:textColor="#ffff"
             android:textSize="25sp"
             android:gravity="center"
             android:text="文章管理"/>

      </LinearLayout>
   </ScrollView>
</LinearLayout>
